= form_for @vendor do |f|
  - if @vendor.errors.any?
    #error_explanation
      h2 = "#{pluralize(@vendor.errors.count, "error")} prohibited this vendor from being saved:"
      ul
        - @vendor.errors.full_messages.each do |message|
          li = message

  .row-fluid
    .span4
      .field
        = f.label "Company Name"
        = f.text_field :name
      .field
        = f.label :contact_name
        = f.text_field :contact_name
      .field
        = f.label :phone
        = f.text_field :phone
      .field
        = f.label :email
        = f.text_field :email
    .span4
      .field
        = f.label :address
        = f.text_area :address, :rows => 3
      .field
        = f.label :notes
        = f.text_area :notes, :rows => 5
    
  .actions = f.submit 'Add Vendor', :class => "btn btn-success"
